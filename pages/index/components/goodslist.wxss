
.goods-list .item {
  display: flex;
  padding: 30rpx 20rpx;
  border-bottom: solid 2rpx #eee;
}
.goods-list .item .pic {
  width: 200rpx;
  height: 200rpx;
}
.goods-list .item .pic image {
  width: 200rpx;
  height: 200rpx;
}
.goods-list .item .content {
  margin-left: 20rpx;
}
.goods-list .item .content .title {
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.goods-list .item .content .priceyellow {
  font-size: 35rpx;
  color: #ff5500;
}
.goods-list .item .content .desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.goods-list .item .content .price {
  margin-top: 10rpx;
}
.goods-list .no-more{
  text-align: center;
  padding: 20rpx;
}


