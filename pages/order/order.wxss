
.wkMain{  flex-wrap: wrap; justify-content: space-between;}
.wkMain .box{ 	border-radius: 10px;width:100%;background: rgba(255, 255, 255, 0.5);height: 314rpx;  position: relative;margin-left: 15rpx;margin-right: 10rpx;box-shadow:0rpx 2rpx 2rpx 2rpx #c8c3c3;margin-bottom:50rpx;}
.wkMain .pic{ width: 150rpx;height: 100rpx;border-radius: 5px;margin-left: 20rpx;}
.wkMain .ceng{ width:100%;height: 100%; background: rgba(255, 255, 255, 0.5); position: absolute; top:0; left: 0; color:#fff; display: flex; flex-direction: column; justify-content: center; align-items: center; padding:0 20rpx; box-sizing: border-box;text-align: center;}
.box2{margin-top: 50rpx;display: flex;}
.box3{display: block;margin-left: 350rpx;}
.box4{margin-left: 80rpx;color: #007AFF; font-weight: bold;}
.wkMain .ceng .tit{font-size: 34rpx;}
.but1{background-color: #007AFF;color: #ffffff;}
.wkMain .ceng .line{ width:50rpx; height: 2rpx; background: #fff; margin:10rpx 0 20rpx;}
.wkMain .ceng .des{ opacity: 0.6; text-transform: uppercase; font-size:24rpx; letter-spacing:5rpx;}
.bostxt{margin-left: 20rpx;margin-top: 30rpx;font-size: 20rpx;font-weight: bold;}
.bostxt2{margin-left: 20rpx;margin-top: 30rpx;font-size: 15rpx;margin-right: 20rpx;}
.pubTitle{ display: flex; justify-content: space-between;height: 60rpx;  align-items: center; margin-bottom:40rpx;}
.pubTitle .txt{ font-size:40rpx; height: 100%; position: relative; padding-left:20rpx;}
.pubTitle .txt::before{ display: block; width:8rpx; height: 34rpx; background: #c8020b; content: ""; position: absolute; left: 0; top:50%; margin-top:-15rpx;}
.pubTitle .more{ font-size:34rpx; color:#666; margin-right: 30rpx}
.dyItem{ display: flex; padding:15rpx 0;border:1rpx dashed #f4f4f4; justify-content: space-between;}
.dyItem .pic{width:230rpx; height: 150rpx;}
.dyItemPic{ width:100%; height: 100%;}
.dyItem .txt{width:440rpx; display: flex; flex-direction:column; justify-content: space-between;}
.dyItem .title{ font-size: 34rpx;}
.dyItem .info{ font-size: 26rpx; color:#888}
.dyItemTxt{font-size:22rpx;}

